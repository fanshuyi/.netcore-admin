<div class="col-md-12">
    <div class="row">

        <div class="col-md-5  col-sm-5" style="margin-bottom:15px;">
            <div class="row" style="">
                <div class="col-md-2" style="line-height:32px;background-color:#f4f4f4;">
                    <label>@HtmlLocalizer["Name"]</label>
                </div>
                <div class="col-md-10" style="padding-left: 0px;padding-right: 0;">
                    <input type="text" name="Name" value="@Model.Name" class="form-control" required />
                </div>
            </div>
        </div>

        <div class="col-md-5  col-sm-5" style="margin-bottom:15px;">
            <div class="row" style="">
                <div class="col-md-2" style="line-height:32px;background-color:#f4f4f4;">
                    <label>@HtmlLocalizer["Amount"]</label>
                </div>
                <div class="col-md-10" style="padding-left: 0px;padding-right: 0;">
                    <input type="number" name="Amount" value="@Model.Amount" class="form-control" required />
                </div>
            </div>
        </div>

        <div class="col-md-2  col-sm-2" style="margin-bottom:15px;">
            <button class="btn btn-success" type="button" onclick="javascript: $(this).parent().parent().parent().after($(this).parent().parent().parent().clone(true));">增加</button>

            <button class="btn btn-warning" type="button" onclick="javascript: $(this).parent().parent().parent().remove();">移除</button>
        </div>
    </div>
</div>