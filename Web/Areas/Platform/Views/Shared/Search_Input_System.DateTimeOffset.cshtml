<div class="input-group">

    <input type="text" id="@ViewBag.Name" name="@ViewBag.Name" class="form-control" placeholder="开始时间" value="@(Context.Request.Query[ViewBag.Name])" />

    <input type="text" id="@(ViewBag.Name)_End" name="@(ViewBag.Name)_End" class="form-control" placeholder="结束时间" value="@(Context.Request.Query[ViewBag.Name + "_End"])" />
</div>
<script>
    $(function () {
        $('#@ViewBag.Name').flatpickr({ enableTime: true,"locale": "zh" });
        $('#@(ViewBag.Name)_End').flatpickr({ enableTime: true,"locale": "zh"  });
    });
</script>