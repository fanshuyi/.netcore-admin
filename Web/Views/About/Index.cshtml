@{
    ViewData["Title"] = "关于我们";
}
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
    <h3>@ViewData["Title"]</h3>
    <div class="btn-toolbar mb-2 mb-md-0">
        <form method="get">
            <div class="input-group ">

                <input id="keyword" name="keyword" type="text" class="form-control" placeholder="关键词" aria-label="Recipient's username" aria-describedby="button-addon2" value="@Context.Request.Query["keyword"]">
                <div class="input-group-append">
                    <button class="btn btn-outline-secondary" type="submit" id="button-addon2">搜索</button>
                </div>
            </div>
        </form>
    </div>
</div>