@model int?

@{
    var htmlattributes = new Dictionary<string, object> { { "class", "form-control" }, { "placeholder", HtmlLocalizer[ViewData.ModelMetadata.Description ?? ""].Value }, { "type", "number" } };

    if (ViewData.ModelMetadata.IsRequired)
    {
        htmlattributes.Add("required", "required");
    }
}

@Html.TextBoxFor(a => a, htmlattributes)