<div class="input-group">

    <select name="@(ViewBag.Name)_method" id="@(ViewBag.Name)_method" class="form-control col-3">
        <option value="==">等于</option>
        <option value="Contains">包含</option>
        <option value="!=">不等于</option>
    </select>

    <input name="@ViewBag.Name" type="text" class="form-control" placeholder="关键词" value="@Context.Request.Query[ViewBag.Name]" />
</div>
<script>
            $("#@(ViewBag.Name)_method option[value='@Context.Request.Query[ViewBag.Name+ "_method"]']").attr("selected", "selected");
</script>